<p id="notice"><%= notice %></p>

<h1>Facebook</h1>
<br>
<br>
<%= link_to '今の気持ちをシェアしよう', new_blog_path %>
<br>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>みんなの投稿</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.content %></td>
        <td><%= image_tag blog.image.url if blog.image.url %></td>
        <td><%= link_to '投稿を確認', blog %></td>
        <td><%= link_to '投稿を編集', edit_blog_path(blog) %></td>
        <td><%= link_to '投稿を削除', blog, method: :delete, data: { confirm: 'この投稿を削除してよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

